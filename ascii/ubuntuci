#!/bin/bash

# Ubuntu
col1=$(tput setaf 9) #lightred
col2=$(tput setaf 8) #black
rst=$(tput sgr0)
s=$(echo "\\")

cat <<EOF
$col1
        ,. ----.,'",
 ,--,.  \  ___  '__*$col2  _    _ _                 _$col1
 *__: \  "     ':  .$col2 | |  | | |_   _   _ _ __ | |__ _   _$col1
   /   ;        ---'$col2 | |  | |  _ \| | | | '_ \|  __| | | |$col1
   \   ,      .---. $col2 | |__| | |_) | |_| | | | | |__| |_| |$col1 
   ^.  ^-  --"  .', $col2  \____/|___ / \__,_|_| |_|\___|\__,_|$col1
     "./  /__.-:__/
$rst
EOF
      
#        ,. ----.,'",
# ,--,.  \  ___  '__*  _    _ _                 _
# *__: \  "     ':  . | |  | | |_   _   _ _ __ | |__ _   _
#   /   ;        ---' | |  | |  _ \| | | | '_ \|  __| | | |
#   \   ,      .---.  | |__| | |_) | |_| | | | | |__| |_| | 
#   ^.  ^-  --"  .',   \____/|___ / \__,_|_| |_|\___|\__,_|
#     "./  /__.-:__/

#!/bin/bash

# arch logo
col1=$(tput setaf 12) #blue
col2=$(tput setaf 8) #black
rst=$(tput sgr0)
s=$(echo "\\")

cat <<EOF
$col1
      __    __                
    __\ \___\ \/ /   $col2  __   _  _          ___    ____$col1
   '-/ /-----. \'_   $col2 |  \ | |(_)__  __  / __ \ /  __$s$col1
  __/ /       \/ /_  $col2 | \ '| || |\ \/ / | /  \ || '__$col1
 '-/_/\       / /--' $col2 | | \  || | >  <  | \__/ |_'_, $s$col1
     \ \_____/ /__   $col2 |_|  \_||_|/_/\_\  \____/ \____/$col1
     '/_\----\_\-'     
$rst
EOF
      

#       __    __                
#     __\ \___\ \/ /     __   _  _          ___    ____
#    '-/ /-----. \'_    |  \ | |(_)__  __  / __ \ /  __\
#   __/ /       \/ /_   | \ '| || |\ \/ / | /  \ || '__
#  '-/_/\       / /--'  | | \  || | >  <  | \__/ |_'_. \
#      \ \_____/ /__    |_|  \_||_|/_/\_\  \____/ \____/
#      '/_\----\_\-'     

